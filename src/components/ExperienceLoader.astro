<div class="loading-bg is-loading fixed inset-0 z-50">
  <div class="gooey">
    <span class="dot"></span>
    <div class="dots">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <p class="loading-text"><span>Loading </span><span class="loading-percentage">0</span>%</p>
</div>

<style>
  .loading-bg {
    background: #000;
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .loading-bg.is-loading {
    display: flex;
  }

  .loading-text {
    position: relative;
    /* top: 45%; */
    width: 142px;
    text-align: center;
    /* margin: -20px 0 0 71px; */

    /* left: 50%; */
  }

  .gooey {
    position: relative;
    /* top: 50%; */
    /* left: 50%; */
    width: 142px;
    height: 40px;
    /* margin: -20px 0 0 -71px; */
    background: #222;
    filter: contrast(20);
  }

  .gooey .dot {
    position: absolute;
    width: 16px;
    height: 16px;
    top: 12px;
    left: 15px;
    filter: blur(4px);
    background: #fff;
    border-radius: 50%;
    transform: translateX(0);
    animation: dot 2.8s infinite;
  }

  .gooey .dots {
    transform: translateX(0);
    margin-top: 12px;
    margin-left: 31px;
    animation: dots 2.8s infinite;
  }

  .gooey .dots span {
    display: block;
    float: left;
    width: 16px;
    height: 16px;
    margin-left: 16px;
    filter: blur(4px);
    background: #fff;
    border-radius: 50%;
  }

  @keyframes dot {
    50% {
      transform: translateX(96px);
    }
  }
  @keyframes dots {
    50% {
      transform: translateX(-31px);
    }
  }
</style>

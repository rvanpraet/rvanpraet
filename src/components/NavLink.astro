---
import type { HTMLAttributes } from 'astro/types'
import { twMerge } from 'tailwind-merge'

export interface LinkProps extends HTMLAttributes<'a'> {
  text?: string
  active?: boolean
  className?: string
  variant?: string
}

type Props = LinkProps

const { active = false, variant = 'primary', className, ...rest } = Astro.props

const wrapperClasses = twMerge(
  `nav-link nav-link--${variant} font-extralight text-base lg:text-sm px-2 lg:px-4`,
  className,
  active ? 'active' : ''
)
---

<a class={wrapperClasses} {...rest}><span class="nav-link--text"><slot /></span></a>

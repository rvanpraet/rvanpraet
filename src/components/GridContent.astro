---
const { className, variant = 'full' } = Astro.props

const variantClasses = {
  a: 'content-variant-a col-start-1 col-span-4 md:col-span-6 lg:col-span-5',
  b: 'content-variant-b col-start-1 col-span-4 md:col-span-6 lg:col-start-7 lg:col-span-5',
  center: '',
  full: 'content-full col-start-1 col-span-4 md:col-span-6 lg:col-span-12',
}

const classes = variantClasses[variant]
---

<div class={'grid-content ' + classes + ' ' + className}>
  <slot />
</div>

<style>
  .content-variant-a,
  .content-variant-b {
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  :global(.grid-content h1) {
    font-size: var(--text-4xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: calc(var(--spacing) * 8);
  }

  :global(.grid-content h2) {
    font-size: var(--text-2xl);
    font-weight: var(--font-weight-semibold);
    margin-bottom: calc(var(--spacing) * 4);
  }

  :global(.grid-content p) {
    font-size: var(--text-lg);
    font-weight: var(--font-weight-light);
    margin-bottom: calc(var(--spacing) * 16);
  }
</style>

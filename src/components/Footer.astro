<script>
  // Footer width smoothly goes up to 100% when reaching the bottom of the page
  // and goes back to its 0 width when scrolling up again
  if (typeof window !== 'undefined') {
    let footerInView = false
    const element = document.querySelector('footer')
    window.addEventListener('scroll', () => {
      const scrollPosition = window.innerHeight + window.pageYOffset
      const threshold = 2 // Adjust for off-by-one px bugs on some platforms
      const pageHeight = document.body.offsetHeight

      if (scrollPosition >= pageHeight - threshold && !footerInView) {
        // You are at (or near) the bottom of the page
        footerInView = true
        element?.classList.add('show')
      } else {
        footerInView = false
        element?.classList.remove('show')
      }
    })
  }
</script>


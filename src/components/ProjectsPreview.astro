---
import { Picture } from 'astro:assets'
import DecoratedLink from './DecoratedLink.astro'
import { twMerge } from 'tailwind-merge'
import type { ImageData } from '@/types/image'

type DecoratedLink = {
  href: string
  title: string
  image: ImageData
  description?: string
  tags?: string[]
}

type Props = {
  class?: string
  projects: DecoratedLink[]
}

const { class: className, projects } = Astro.props
const classes = twMerge('generic-image-grid col-start-1 col-span-16 flex w-full flex-row flex-wrap', className)
---

<div class={classes}>
  {
    projects.map((project) => (
      <DecoratedLink
        class="w-full lg:w-1/2 mt-12 lg:mt-8 lg:even:pl-3 lg:odd:pr-3"
        image={project.image}
        title={project.title}
        description={project.description}
        tags={project.tags}
        href={project.href}
      />
    ))
  }
</div>
